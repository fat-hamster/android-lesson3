<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:background="@drawable/style_textview"
            android:gravity="right"
            android:hint="@string/_0"
            android:paddingRight="@dimen/horizontal_margin"
            android:textSize="@dimen/textviewSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ac"
                style="@style/DarkGrayButtons"
                android:text="@string/ac" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/min_plus"
                style="@style/DarkGrayButtons"
                android:text="@string/min_plus" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/percent"
                style="@style/DarkGrayButtons"
                android:text="@string/percent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/div"
                style="@style/OrangeButtons"
                android:text="@string/divide" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/_7"
                style="@style/GrayButtons"
                android:text="@string/_7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_8"
                style="@style/GrayButtons"
                android:text="@string/_8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_9"
                style="@style/GrayButtons"
                android:text="@string/_9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                style="@style/OrangeButtons"
                android:text="@string/multiply" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_4"
                style="@style/GrayButtons"
                android:text="@string/_4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_5"
                style="@style/GrayButtons"
                android:text="@string/_5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_6"
                style="@style/GrayButtons"
                android:text="@string/_6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus"
                style="@style/OrangeButtons"
                android:text="@string/minus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_1"
                style="@style/GrayButtons"
                android:text="@string/_1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_2"
                style="@style/GrayButtons"
                android:text="@string/_2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/_3"
                style="@style/GrayButtons"
                android:text="@string/_3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus"
                style="@style/OrangeButtons"
                android:text="@string/plus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_weight="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/_0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:backgroundTint="@color/gray"
                    android:text="@string/_0"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_weight="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/comma"
                    style="@style/GrayButtons"
                    android:text="@string/comma" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/equal"
                    style="@style/OrangeButtons"
                    android:text="@string/equal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>